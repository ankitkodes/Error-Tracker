datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

model User{
  id       Int @unique @default(autoincrement())
  name     String
  email    String
  password String
  organizationName String?
  role   Role
  project Project[]

}

model Project{
  id           Int @unique @default(autoincrement())
  name         String
  description  String
  techstack    String
  userId      Int 
  user        User @relation(fields: [userId], references: [id])
  error        Error[]
}

model Error{
  id         Int @unique @default(autoincrement())
  type       String
  message    String
  source   String
  lineno    Int
  colno     Int
  status     Status @default(Bug)
  error String
  errorCount Int? @default(1)
  createdAt  DateTime @default(now())
  projectId  Int
  project    Project @relation(fields: [projectId], references: [id])

}

enum Status{
  Bug
  InProcess
  Fixed
}

enum Role{
  Developer
  Team_Lead
  Admin
}