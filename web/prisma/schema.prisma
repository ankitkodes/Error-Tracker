datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

model User{
  id       Int @unique @default(autoincrement())
  name     String
  email    String @unique
  password String
  organizationName String?
  role   Role
  project Project[]
  analytics ErrorAnalytics[]

}

model Project{
  id           String @unique
  name         String
  apikey       String @unique
  language    Language @default(Nodejs)
  environment Environment @default(Production)
  team String
  userId      Int 
  user        User @relation(fields: [userId], references: [id])
  error        Error[]
  projecthealth ProjectHealth[]
}

model Error{
  id         Int @unique @default(autoincrement())
  errorType String?
  message    String
  fileName String?
  lineNumber Int
  error String
  occurrence Int @default(1)
  severity   Severity @default(Error)
  status     Status @default(Bug)
  
  issuehashId String? @unique
 
  createdAt  DateTime @default(now())
  projectId  String
  project    Project @relation(fields: [projectId], references: [id])
}

model ErrorAnalytics{
  id Int @default(autoincrement())
  date String @unique
  error Int
  resolvederror Int
  createdAt DateTime @default(now())
  userId      Int @unique
  user        User @relation(fields: [userId], references: [id])
}

model ProjectHealth{
  id Int  @default(autoincrement())
  totalerrors Int
  resolvederror Int
  uptimepercentage Float
  status Projectstatus @default(Healthy)
  projectId String @unique
  project Project @relation(fields: [projectId], references: [id])
}

enum Projectstatus{
  Healthy
  Warning
  Critical
}

enum Status{
  Bug
  InProcess
  Resolved
}

enum Role{
  Developer
  Team_Lead
  Admin
}

enum Environment{
  Production
  Staging
  Development
}

enum Language{
  Nodejs
  Nextjs
  Reactjs
}

enum Severity{
  Error
  Warning
}